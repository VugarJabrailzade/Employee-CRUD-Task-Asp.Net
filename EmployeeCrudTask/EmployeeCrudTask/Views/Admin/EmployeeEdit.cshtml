@using EmployeeCrudTask.ViewModel;
@model EmployeeUpdateViewModel;

@{
    Layout = "_AdminLayout";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <p class="text-muted mb-0">Update Product.</p>
        </div><!--end card-header-->
        <div class="card-body">
            <form asp-controller="Employee" asp-action="EmployeeEdit" method="POST">
                <div class="form-group">
                    <label asp-for="Name">Product Name:</label>
                    <input asp-for="Name" type="text" class="form-control" id="productName" placeholder="Enter product name">
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname:</label>
                    <input asp-for="Surname" type="text" class="form-control" id="productPrice" placeholder="Enter price">
                </div>
                <div class="form-group">
                    <label asp-for="FatherName">Father Name:</label>
                    <input asp-for="FatherName" type="text" class="form-control" id="productRating" placeholder="Enter rating">
                </div>
                <div class="form-group">
                    <label asp-for="Fincode">Fincode:</label>
                    <input asp-for="Fincode" type="text" class="form-control" id="productRating" placeholder="Enter rating">
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="text" class="form-control" id="productRating" placeholder="Enter rating">
                </div>
                <div class="form-group">
                    <label asp-for="Employeeimg">Employee Image:</label>
                    <input asp-for="Employeeimg" type="text" class="form-control" id="productRating" placeholder="Enter rating">
                </div>
                <div class="form-group">
                    <label for="DepartamentId">Departament:</label>
                    <select asp-for="DepartamentId" id="productCategory" class="form-control">
                        <option value="">-- NOT SELECTED --</option>

                        @foreach (var departament in Model.Departaments)
                        {
                            @if (departament.Id == Model.DepartamentId)
                            {
                                <option value="@departament.Id" selected >@departament.Name</option>
                            }
                            else
                            {
                                <option value="@departament.Id">@departament.Name</option>
                            }
                        }
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Update</button>
            </form>
        </div><!--end card-body-->
    </div><!--end card-->
</div>