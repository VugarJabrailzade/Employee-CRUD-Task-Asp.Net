
@{
    Layout = "_AdminLayout";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <p class="text-muted mb-0">Add New Product.</p>
        </div><!--end card-header-->
        <div class="card-body">
            <form asp-controller="Product" asp-action="Add" method="POST">
                <div class="form-group">
                    <label asp-for="Name">Product Name:</label>
                    <input asp-for="Name" type="text" class="form-control" id="productName" placeholder="Enter product name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname:</label>
                    <input asp-for="Surname" type="text" class="form-control" id="productPrice" placeholder="Enter price">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FatherName">Father Name:</label>
                    <input asp-for="Rating" type="text" class="form-control" id="productRating" placeholder="Enter rating">
                    <span asp-validation-for="Rating" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FinCode">Fin Code:</label>
                    <input asp-for="FinCode" type="text" class="form-control" id="productRating" placeholder="Enter rating">
                    <span asp-validation-for="FinCoden" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="text" class="form-control" id="productRating" placeholder="Enter rating">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="EmployeeImg">Employee Image:</label>
                    <input asp-for="EmployeeImg" type="text" class="form-control" id="productRating" placeholder="Enter rating">
                    <span asp-validation-for="EmployeeImg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="productCategory">Departament:</label>
                    <select asp-for="DepartamentId" id="productCategory" class="form-control">
                        @foreach (var departament in Model.Departament)
                        {
                            <option value="@departament.Id">@departament.Name</option>

                        }
                    </select>
                    <span asp-validation-for="DepartamentId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Add Product</button>
            </form>
        </div><!--end card-body-->
    </div><!--end card-->
</div>