@using EmployeeCrudTask.ViewModel;
@model EmployeeAddRequestViewModel
@{
    Layout = "_AdminLayout";
}

<div class="col-lg-12">
    <div class="card">
        <div class="card-header">
            <p class="text-muted mb-0">Add New Product.</p>
        </div><!--end card-header-->
        <div class="card-body">
            <form asp-route="employee-add" method="POST">
                <div class="form-group">
                    <label asp-for="Name">Employee Name:</label>
                    <input asp-for="Name" type="text" class="form-control" id="employeeName" placeholder="Enter product name">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Surname">Surname:</label>
                    <input asp-for="Surname" type="text" class="form-control" id="employeeSurname" placeholder="Enter price">
                    <span asp-validation-for="Surname" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="FatherName">Father Name:</label>
                    <input asp-for="FatherName" type="text" class="form-control" id="employeeFathername" placeholder="Enter rating">
                    <span asp-validation-for="FatherName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Fincode">Fin Code:</label>
                    <input asp-for="Fincode" class="form-control" id="employeeFincode" placeholder="Enter rating">
                    <span asp-validation-for="Fincode" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Email">Email:</label>
                    <input asp-for="Email" type="email" class="form-control" id="employeeEmail" placeholder="Enter rating">
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Employeeimg">Employee Image:</label>
                    <input asp-for="Employeeimg" type="text" class="form-control" id="employeeImg" placeholder="Enter rating">
                    <span asp-validation-for="Employeeimg" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label for="productCategory">Departament:</label>
                    <select asp-for="Departaments" id="productCategory" class="form-control">
                        <option value="">-- NOT SELECTED --</option>
                        @foreach (var departament in Model.Departaments)
                        {
                            @if (departament.Id == Model.DepartamentId)
                            {
                                <option value="@departament.Id" selected>@departament.Name</option>
                            }
                            else
                            {
                                <option value="@departament.Id">@departament.Name</option>
                            }
                        }
                    </select>
                    <span asp-validation-for="DepartamentId" class="text-danger"></span>
                </div>
                <button type="submit" class="btn btn-primary">Add Product</button>
            </form>
        </div><!--end card-body-->
    </div><!--end card-->
</div>